<%- include('../partials/head.ejs') %>
</head>
<body>
    <main class="container-fluid vh-100">
        <div class="h-100 my-auto mx-2 row justify-content-center">
            <div class="col-lg-4 col-sm-12 align-self-center">            
                <img src="images/logo.png" class="rounded mx-auto d-block" alt="logo">
                <h1 class="display-6 mt-3 mb-5 text-center fw-semibold">SISTEM APLIKASI PERTANGGUNG JAWABAN-DBH PROVINSI (SIAP-DP)</h1>
                <p class="h2 mb-3 text-center">Login</p>
                
                <form action="/api/auth<%= path %>" id="login-form" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" id="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="password" required>
                    </div>
                    <div class="w-100 text-center">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" id="submit-login-btn" class="w-100 btn btn-primary my-2">MASUK</button>
                        <% if(!path.includes('/admin')) { %>
                            <p class="my-2">Belum punya akun? <a href="/signup" class="link-underline-primary">Buat Akun Baru Disini</a></p>
                            <p class="my-2"><a href="/ganti-password" class="link-underline-warning text-warning">Lupa Password?</a></p>
                        <% } %>
                    </div>
                </form>                
            </div>
        </div>
        <%- include('../partials/toast-msg.ejs') %>
    </main>   

<%- include('../partials/end.ejs') %>