<%- include('../partials/head.ejs') %>
</head>
<body>
    <main>
        <div class="container my-5">
            <div class="row align-items-center justify-content-center">
                <div class="col-sm-4 mx-auto">
                    <p class="h2 mb-5 text-center">Ganti Password Baru</p>
                    
                    <form action="/api/auth/ganti-password" method="POST" class="needs-validation"  novalidate>
                        <div class="mb-3">
                            <label for="phone-number" class="form-label">Nomor HP</label>
                            <input type="tel" class="form-control" name="phone" id="phone-number" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirm-password" class="form-label">Konfirmasi Password</label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirm-password" required>
                        </div>
                        <div class="w-100 text-center">
                            <button type="submit" class="w-100 btn btn-primary mb-3">UPDATE DATA</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include('../partials/end.ejs') %>