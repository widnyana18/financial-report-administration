<%- include('../partials/head.ejs') %>
</head>
<body>
    <main>
        <div class="container my-5">
            <div class="row align-items-center justify-content-center">
                <div class="col-sm-4 mx-auto">                                        
                    <p class="h2 mb-3 text-center">Profile Ku</p>
                    
                    <form action="api/opd/edit/<%= opd._id %>" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="opd-name" class="form-label">Nama OPD</label>
                            <input type="text" class="form-control" name="opdName" id="opd-name" value="<%= opd.opdName %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" id="username" value="<%= opd.username %>" required>
                        </div>                  
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" value="<%= opd.password %>" required>
                        </div>                               
                        <div class="mb-3">
                            <label for="phone-number" class="form-label">No Hp</label>
                            <input type="text" class="form-control" name="phoneNumber" id="phone-number" value="<%= opd.phone %>" required>
                        </div>                  
                        <div class="mb-3">
                            <label for="institution" class="form-label">Lembaga</label>
                            <input type="text" class="form-control" name="institution" id="institution" value="<%= opd.institution %>" required>
                        </div>                                   
                        <div class="w-100 text-center">
                            <button type="submit" class="w-100 btn btn-primary mb-3">Ubah Data</button>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include('../partials/end.ejs') %>