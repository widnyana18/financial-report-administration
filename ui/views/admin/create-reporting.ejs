<%- include('../partials/head.ejs') %>
</head>
<body>
    <main class="mx-auto my-5 w-75">                   
        <p class="h2 mb-5 text-center"><%= pageTitle %></p>            
        <form action="<%= apiRoute %>" method="POST" id="dbh-realization-form" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Judul<span class="text-danger"> *</span></label>
                <input value="<%= selectedReporting?.reporting.title %>" type="text" class="form-control" name="title" id="title" required>
            </div>
            <div class="mb-3">
                <label for="period" class="form-label">Triwulan <span class="text-danger">*</span></label>
                <div class="dropdown">
                    <input type="hidden" name="period" id="period" value="<%= selectedReporting?.reporting.period %>" required>
                    <button id="period-btn" class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <%= selectedReporting?.reporting.period ?? "Pilih Triwulan" %>
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item period-item" id="triwulan1">Triwulan I</a></li>
                      <li><a class="dropdown-item period-item" id="triwulan2">Triwulan II</a></li>                              
                      <li><a class="dropdown-item period-item" id="triwulan3">Triwulan III</a></li>                              
                      <li><a class="dropdown-item period-item" id="triwulan4">Triwulan IV</a></li>                              
                    </ul>
                </div>
            </div>
            <div class="mb-3">
                <label for="year" class="form-label">Tahun <span class="text-danger"> *</span></label>                                
                <input value="<%= selectedReporting?.reporting.year %>" type="number" class="form-control" name="year" id="year" required>
            </div>
            <div class="border row rounded p-2 mb-3">
                <div class="d-flex flex-row justify-content-between">
                    <p class="h6 mb-3">Daftar Lembaga Penerima Anggaran DBH : <span class="text-danger"> *</span></p>
                    <button type="button" id="add-institution-btn" class="btn btn-success mb-3 mx-2 btn-sm">TAMBAH LEMBAGA</button>
                </div> 
                <div id="institution-dbh-form">                    
                    <% let id = 1; %>
                    <% if(selectedReporting?.institution.length > 0) { %>
                        <% for(let item of selectedReporting?.institution) { %>
                            <input type="hidden" name="docId" id="doc-id" value="<%= item._id %>" required>
                            <div class="d-inline-flex my-2 align-items-center" id="institution-<%= id %>">                                
                                <div class="me-2 w-50">                      
                                    <label for="institutionName<%= id %>" class="form-label">Nama Lembaga<span class="text-danger"> *</span></label>
                                    <input type="text" class="form-control" value="<%= item.institutionName %>" name="institutionName<%= id %>" id="institution-name-<%= id %>" required>
                                </div>                
                                <div class="me-2">
                                    <label for="pkbBudget<%= id %>" class="form-label">PKB</label>
                                    <input type="number" class="form-control" value="<%= item.dbhBudget.pkb %>" name="pkbBudget<%= id %>" id="pkb-budget-<%= id %>">
                                </div>                                                        
                                <div class="me-2">
                                    <label for="pbbkbBudget<%= id %>" class="form-label">PBBKB</label>
                                    <input type="number" class="form-control" value="<%= item.dbhBudget.pbbkb %>" name="pbbkbBudget<%= id %>" id="pbbkb-budget-<%= id %>">
                                </div>                                                        
                                <div class="me-2">
                                    <label for="pajakRokokBudget<%= id %>" class="form-label">Pajak Rokok</label>
                                    <input type="number" class="form-control" value="<%= item.dbhBudget.pajakRokok %>" name="pajakRokokBudget<%= id %>" id="pajakRokok-budget-<%= id %>">
                                </div>    
                                <div class="me-2">
                                    <label for="bbnkbBudget<%= id %>" class="form-label">BBNKB</label>
                                    <input type="number" class="form-control" value="<%= item.dbhBudget.bbnkb %>" name="bbnkbBudget<%= id %>" id="bbnkb-budget-<%= id %>">
                                </div> 
                                <div class="me-2">
                                    <label for="papBudget<%= id %>" class="form-label">PAP</label>
                                    <input type="number" class="form-control" value="<%= item.dbhBudget.pap %>" name="papBudget<%= id %>" id="pap-budget-<%= id %>">
                                </div>
                                <div class="px-2 pt-3 remove-institution-btn">
                                    &#x274C;
                                </div>                                                     
                            </div>
                            <% id++; %>
                        <% } %>
                    <% } %>
                </div> 
                <div class="d-inline mb-3">
                    <p class="h6">Total Lembaga : <span id="total-opd-txt"><%= selectedReporting?.reporting.totalOpd ?? 0 %></span></p>
                    <input type="hidden" name="totalOpd" id="total-opd" value="<%= selectedReporting?.reporting.totalOpd ?? 0 %>" required>
                </div>               
            </div>
            <div class="border row rounded p-2 mb-5">
                <p class="h6 text-primary mb-3">Jumlah Penerimaan DBH</p>
                <div class="col me-3">                      
                    <div class="my-2">
                        <label for="pkbRecieved" class="form-label">PKB<span class="text-danger"> *</span></label>
                        <input value="<%= selectedReporting?.reporting.dbhRecieved.pkb %>" type="number" class="form-control" name="pkbRecieved" id="pkb-recieved" required>
                    </div>                                                        
                    <div class="my-2">
                        <label for="pbbkbRecieved" class="form-label">PBBKB<span class="text-danger"> *</span></label>
                        <input value="<%= selectedReporting?.reporting.dbhRecieved.pbbkb %>" type="number" class="form-control" name="pbbkbRecieved" id="pbbkb-recieved" required>
                    </div>                                                        
                    <div class="my-2">
                        <label for="pajakRokokRecieved" class="form-label">Pajak Rokok<span class="text-danger"> *</span></label>
                        <input value="<%= selectedReporting?.reporting.dbhRecieved.pajakRokok %>" type="number" class="form-control" name="pajakRokokRecieved" id="pajakRokok-recieved" required>
                    </div>                                                        
                </div>
                <div class="col">
                    <div class="my-2">
                        <label for="bbnkbRecieved" class="form-label">BBNKB<span class="text-danger"> *</span></label>
                        <input value="<%= selectedReporting?.reporting.dbhRecieved.bbnkb %>" type="number" class="form-control" name="bbnkbRecieved" id="bbnkb-recieved" required>
                    </div> 
                    <div class="my-2">
                        <label for="papRecieved" class="form-label">PAP<span class="text-danger"> *</span></label>
                        <input value="<%= selectedReporting?.reporting.dbhRecieved.pap %>" type="number" class="form-control" name="papRecieved" id="pap-recieved" required>
                    </div> 
                </div>
            </div>            
            <div class="d-flex ms-2 mt-3  justify-content-end">                                                    
                <button type="button" id="clear-btn" class="btn btn-secondary mb-3 mx-2" style="width: 18%;">CLEAR</button>                            
                <button type="submit" id="submit-form-btn" class="btn btn-primary mb-3 mx-2" style="width: 18%;">SIMPAN DATA</button>                            
            </div>
        </form>                               
    </main>    

    <script src="/js/admin/create-reporting.js"></script>

<%- include('../partials/end.ejs') %>